<!DOCTYPE html>
<html>
  <head>
    <title><%= product._id ? "Edit Product" : "Add New Product" %></title>
  </head>
  <body>
    <%- include('partials/header', { title: 'Products' }) %> <%-
    include('partials/navbar') %>

    <h2><%= product._id ? "Edit Product" : "Add New Product" %></h2>
    <form
      action="<%= product._id ? '/admin/products/edit/' + product._id : '/admin/products/new' %>"
      method="POST"
    >
      <label>Name:</label>
      <input
        type="text"
        name="name"
        value="<%= product.name || '' %>"
        required
      /><br />

      <label>Category:</label>
      <input
        type="text"
        name="category"
        value="<%= product.category || '' %>"
      /><br />

      <label>Price:</label>
      <input
        type="number"
        step="0.01"
        name="price"
        value="<%= product.price || '' %>"
        required
      /><br />

      <label>Inventory:</label>
      <input
        type="number"
        name="inventory"
        value="<%= product.inventory || 0 %>"
        required
      /><br />

      <label>Description:</label>
      <textarea name="description"><%= product.description || '' %></textarea
      ><br />

      <button type="submit">
        <%= product._id ? "Update Product" : "Add Product" %>
      </button>
    </form>
    <a href="/admin/dashboard/products">Back to Product List</a>
  </body>
</html>
