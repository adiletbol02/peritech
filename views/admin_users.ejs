<!DOCTYPE html>
<html>
<head>
  <title>Manage Users</title>
</head>
<body>
    <%- include('partials/header', { title: 'Products' }) %>
  <%- include('partials/navbar') %>
  
  <h2>Manage Users</h2>
  
  <table border="1" cellpadding="5">
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Current Status</th>
      <th>Change Status</th>
    </tr>
    <% users.forEach(user => { %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.isAdmin ? "Admin" : "User" %></td>
        <td>
          <form action="/admin/dashboard/users/update/<%= user._id %>" method="POST">
            <select name="isAdmin">
              <option value="true" <%= user.isAdmin ? "selected" : "" %>>Admin</option>
              <option value="false" <%= !user.isAdmin ? "selected" : "" %>>User</option>
            </select>
            <button type="submit">Update</button>
          </form>
        </td>
      </tr>
    <% }); %>
  </table>
  
  <a href="/admin/dashboard">Back to Dashboard</a>
</body>
</html>
